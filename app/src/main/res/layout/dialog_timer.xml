<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/dialog_constr_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_hut"/>

    <TextView
        android:id="@+id/dialog_constr_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZXDGFDG"
        android:textSize="18sp"
        android:layout_marginTop="13dp"
        android:layout_alignTop="@+id/dialog_constr_image"
        android:layout_toEndOf="@+id/dialog_constr_image"/>

</RelativeLayout>