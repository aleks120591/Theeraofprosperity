<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:elevation="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="4dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="77dp"
            android:padding="5dp">

            <ImageView
                android:id="@+id/list_item_constr_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/ic_hut"/>

            <TextView
                android:id="@+id/list_item_constr_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/list_item_constr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="building"
                android:textSize="18sp"
                android:layout_alignTop="@+id/list_item_constr_image"
                android:layout_toEndOf="@+id/list_item_constr_image"
                android:layout_marginTop="9dp"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>